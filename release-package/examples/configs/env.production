# ============================================
# Production Environment Configuration
# ============================================
# Use strong, unique values for all credentials
# Generate secrets with: openssl rand -base64 32
# ============================================

# ===== REQUIRED CREDENTIALS =====
JWT_SECRET=GENERATE_32_CHAR_SECRET_HERE

# ===== DATABASE =====
POSTGRES_USER=ansible_mcp_prod
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_DB=ansible_mcp_production
WEB_DB_NAME=ansible_mcp_web

# ===== SECURITY =====
VAULT_ROOT_TOKEN=GENERATE_VAULT_TOKEN_HERE
AWX_SECRET_KEY=GENERATE_AWX_SECRET_HERE
GITLAB_ROOT_PASSWORD=GENERATE_GITLAB_PASSWORD_HERE
GRAFANA_ADMIN_PASSWORD=GENERATE_GRAFANA_PASSWORD_HERE

# ===== MCP AUTHENTICATION =====
MCP_API_KEY=GENERATE_API_KEY_HERE
MCP_ENABLE_AUTH=true

# ===== AI PROVIDER =====
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo
OPENAI_API_KEY=sk-your-production-key

# ===== LOGGING =====
LOG_LEVEL=info

# ===== METRICS =====
METRICS_PORT=9090

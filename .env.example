# AI Provider Configuration
# Choose one of: openai, anthropic, gemini, ollama
AI_PROVIDER=openai

# AI Model (optional - uses provider defaults if not specified)
# OpenAI: gpt-5, gpt-4.1, gpt-4.1-mini, gpt-4.1-nano, o4-mini, o3, gpt-4o
# Anthropic: claude-sonnet-4-5-20250929, claude-haiku-4-5-20251015, claude-opus-4-1-20250805
# Gemini: gemini-3-pro, gemini-3-deep-think, gemini-2.5-flash, gemini-2.5-pro
# Ollama: llama3.2, llama3.1, qwen2.5-coder, codellama, mistral, etc.
AI_MODEL=gpt-4.1

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
# Alternative variable name
# GOOGLE_API_KEY=your-google-api-key-here

# Ollama Configuration (local LLMs)
# Only required if using custom Ollama instance
# AI_BASE_URL=http://localhost:11434

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_ROOT_TOKEN=your-vault-token-here

# ==============================================
# DATABASE CREDENTIALS (REQUIRED FOR PRODUCTION)
# ==============================================

# PostgreSQL Configuration
POSTGRES_USER=awx
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=awx

# Web UI Database (uses same PostgreSQL instance)
WEB_DB_NAME=ansible_mcp

# JWT Secret for Web UI Authentication (REQUIRED - no default)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# ==============================================
# SERVICE CREDENTIALS
# ==============================================

# GitLab Root Password
GITLAB_ROOT_PASSWORD=your-gitlab-password-here

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=your-grafana-password-here

# AWX Secret Key
AWX_SECRET_KEY=your-awx-secret-key-here

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=production
